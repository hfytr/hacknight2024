---
import Layout from '../layouts/layout.astro';
---

<Layout>
    <div class="flex flex-col items-center">
        <h1 class="text-3xl font-bold">You accepted the cookies!</h1>
        <p class="mb-3">
            You are now being tracked. Good job!
        </p>
        <div class="flex justify-center gap-8">
            <a href="/" class="w-40 text-center bg-muted p-1 rounded-lg">
                Retry from the start
            </a>
            <button onclick="history.back()" class="w-40 text-center bg-muted p-1 rounded-lg">
                Go Back
            </button>
        </div>
    </div>
</Layout>